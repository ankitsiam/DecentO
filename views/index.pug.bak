doctype html
title W3.CSS Template
style
  include style.css
meta(charset='UTF-8')
meta(name='viewport', content='width=device-width, initial-scale=1')
link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato')
link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
// Navbar (sit on top)
.w3-top
  #myNavbar.w3-bar
    a.w3-bar-item.w3-button.w3-hover-black.w3-hide-medium.w3-hide-large.w3-right(href='javascript:void(0);', onclick='toggleFunction()', title='Toggle Navigation Menu')
      i.fa.fa-bars
    |             
    a.w3-bar-item.w3-button(href='#home') HOME
    |             
    a.w3-bar-item.w3-button.w3-hide-small(href='#about')
      i.fa.fa-user
      |  ABOUT
    |             
    a.w3-bar-item.w3-button.w3-hide-small(href='#portfolio')
      i.fa.fa-th
      |  PORTFOLIO
    |             
    a.w3-bar-item.w3-button.w3-hide-small(href='#contact')
      i.fa.fa-envelope
      |  CONTACT
    |             
    a.w3-bar-item.w3-button.w3-hide-small.w3-right.w3-hover-red(href='#')
      i.fa.fa-search
  // Navbar on small screens
  #navDemo.w3-bar-block.w3-white.w3-hide.w3-hide-large.w3-hide-medium
    a.w3-bar-item.w3-button(href='#about', onclick='toggleFunction()') ABOUT
    |             
    a.w3-bar-item.w3-button(href='#portfolio', onclick='toggleFunction()') PORTFOLIO
    |             
    a.w3-bar-item.w3-button(href='#contact', onclick='toggleFunction()') CONTACT
    |             
    a.w3-bar-item.w3-button(href='#') SEARCH
// First Parallax Image with Logo Text
#home.bgimg-1.w3-display-container.w3-opacity-min


  .w3-display-middle(style='white-space:nowrap;')
    span.w3-center.w3-padding-large.w3-black.w3-xlarge.w3-wide.w3-animate-opacity
      | MY 
      span.w3-hide-small WEBSITE
      |  LOGO
