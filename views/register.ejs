<body>
  <% include partials/head.ejs %>
  <% include partials/navigation.ejs %>
  
  <div class="container" id="register_box">
      
          <form action="/register" method="post" class="form-signin" >
            <br/>
            <h2 class="form-signin-heading" style="text-align:center;">Register</h2><hr/><br/>

              <div class="form-group">
                <label for="email_id" class="sr-only">email address</label>
                <input type="text" id="email_id" name="email_id" class="form-control" placeholder="Email address" required autofocus><br/>
              </div> 

              <div class="form-group">
                <label for="inputPassword"  class="sr-only">Password</label>
                <input type="password" name="pass_phrase" id="pass_phrase" class="form-control" placeholder="Password" required><br/>
              </div>

              <div class="form-group">    
                <label for="confirmPassword"  class="sr-only">Password</label>
                <input type="password" id="confirmPassword" name="confirm_pass_phrase" class="form-control" placeholder="Confirm Password" required><br/>
              </div>  
              <div class="form-group"> 
                  <button class="btn btn-lg btn-danger btn-block" type="submit">Sign Up</button>
              </div>    
              </form>
       
      </div>
  
  
  <% include partials/footer.ejs %>
  
  </body>
